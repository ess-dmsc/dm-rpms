[Unit]
Description=Apache Kafka
After=network.target

[Service]
User=kafka
Group=kafka
Environment=LOG_DIR=/var/log/kafka
WorkingDirectory=/var/opt/dm_group/kafka
ExecStart=/opt/dm_group/kafka/bin/kafka-server-start.sh /etc/opt/dm_group/kafka/server.properties
Restart=on-abort

[Install]
WantedBy=multi-user.target
